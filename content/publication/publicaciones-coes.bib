}

@article{otero_symbolic_2021,
  ids = {otero_symbolic_2021a},
  title = {Symbolic Domination in the Neoliberal City: Space, Class, and Residential Stigma},
  shorttitle = {Symbolic Domination in the Neoliberal City},
  author = {Otero, Gabriel and Méndez, María Luisa and Link, Felipe},
