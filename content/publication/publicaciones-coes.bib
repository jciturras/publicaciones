@article{lopez-morales_complejo_2021,
  ids = {lopez-morales_complejo_2021a},
  title = {El complejo urbano financiero inmobiliario en América latina. Introducción},
  author = {{López-Morales}, Ernesto and Klett, Ivo Gasic},
  year = {2021},
  month = mar,
  journal = {Scripta Nova. Revista Electrónica de Geografía y Ciencias Sociales},
  volume = {25},
