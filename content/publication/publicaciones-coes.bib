  title = {Adaptation and Validation into Spanish of the Workplace Dignity Scale},
  author = {Sainz, Mario and {Escuela de Psicología, Pontificia Universidad Católica de Chile, Santiago, Chile} and Lobato, Roberto M. and {Euro-Arab Foundation for Higher Studies, Granada, Spain} and {Porras-Caballero}, Frida and {School of Psychology, University of Monterrey, Nuevo León, Mexico}},
