@article{melendez_chile_2021,
  title = {Chile 2020: Pandemic and Constitutional Plebiscite},
  shorttitle = {Chile 2020},
  author = {Meléndez, Carlos and Rovira Kaltwasser, Cristóbal and Sajuria, Javier and Meléndez, Carlos and Rovira Kaltwasser, Cristóbal and Sajuria, Javier},
  year = {2021},
  journal = {Revista de ciencia política (Santiago)},
  volume = {41},
