@article{chayinska_coronavirus_2021,
  title = {Coronavirus Conspiracy Beliefs and Distrust of Science Predict Risky Public Health Behaviours through Optimistically Biased Risk Perceptions in Ukraine, Turkey, and Germany},
  author = {Chayinska, Maria and Uluğ, Özden Melis and Ayanian, Arin H. and Gratzel, Johanna Claudia and Brik, Tymofii and Kende, Anna and McGarty, Craig},
  year = {2021},
